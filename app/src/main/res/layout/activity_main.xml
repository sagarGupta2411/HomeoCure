<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15sp"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            android:layout_weight="1">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/home_cv"
                android:background="#ffffff"
                card_view:cardBackgroundColor="#ffffff"
                card_view:cardCornerRadius="6dp"
                card_view:contentPadding="10dp"
                card_view:cardElevation="10dp"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                >
                <LinearLayout
                    android:id="@+id/book_appointment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:id="@+id/imageview"
                        android:layout_gravity="center"
                        android:src="@drawable/bookapp"
                        android:layout_weight="1"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Book an Appoinment"
                        android:textColor="#fd000000"
                        android:background="#10ffffff"
                        android:textAlignment="center"
                        android:id="@+id/tv"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        />

                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/home_cv2"
                android:background="#ffffff"
                card_view:cardBackgroundColor="#ffffff"
                card_view:cardCornerRadius="6dp"
                card_view:contentPadding="10dp"
                card_view:cardElevation="10dp"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:id="@+id/imageview2"
                        android:layout_gravity="center"
                        android:src="@drawable/ordermed"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Order Medicine"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:textColor="#fd000000"
                        android:background="#10ffffff"
                        android:layout_weight="1"
                        />

                </LinearLayout>


            </android.support.v7.widget.CardView>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_margin="2dp">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/home_cv3"
                android:background="#ffffff"
                card_view:cardBackgroundColor="#ffffff"
                card_view:cardCornerRadius="6dp"
                card_view:contentPadding="10dp"
                card_view:cardElevation="10dp"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:id="@+id/imageview3"
                        android:layout_gravity="center"
                        android:src="@drawable/reminder"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="2dp"
                        android:text="Set Medicine Reminders"
                        android:textColor="#fd000000"
                        android:background="#10ffffff"
                        android:textAlignment="center"
                        android:id="@+id/tv3"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        />

                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/home_cv4"
                android:background="#ffffff"
                card_view:cardBackgroundColor="#ffffff"
                card_view:cardCornerRadius="6dp"
                card_view:contentPadding="10dp"
                card_view:cardElevation="10dp"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:id="@+id/imageview4"
                        android:layout_gravity="center"
                        android:src="@drawable/askfreeque"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Ask free Questions"
                        android:textColor="#fd000000"
                        android:background="#10ffffff"
                        android:textAlignment="center"
                        android:id="@+id/tv4"
                        android:textSize="15sp"
                        android:layout_weight="1"
                        />

                </LinearLayout>


            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_margin="2dp">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/home_cv5"
                android:background="#ffffff"
                card_view:cardBackgroundColor="#ffffff"
                card_view:cardCornerRadius="6dp"
                card_view:contentPadding="10dp"
                card_view:cardElevation="10dp"
                android:layout_weight="1"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:padding="10dp"

                    >
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:id="@+id/imageview5"
                        android:layout_gravity="center"
                        android:src="@drawable/call"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:text="Make a Call"
                        android:textColor="#fd000000"
                        android:background="#10ffffff"
                        android:textAlignment="center"
                        android:id="@+id/tv5"
                        android:textSize="15sp"
                        />

                </LinearLayout>


            </android.support.v7.widget.CardView>


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>